#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;

#define testcase() {ll t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((ll)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"

void solve() {
	int n;
	cin >> n;
	int s = 0;
	ar<int, 3> a[2 * n];
	for(int i = 0; i < 2 * n; i++) {
		cin >> a[i][1] >> a[i][2];
		a[i][0] = a[i][1] - a[i][2];
	}
	sort(a, a + 2 * n);
	for(int i = 0; i < n; i++) s += a[i][1];
	for(int i = n; i < 2 * n; i++) s += a[i][2];
	cout << s << "\n";
}

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
//	testcase();
	solve();
	return 0;
}
