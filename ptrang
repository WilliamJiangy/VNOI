#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"

const int nxM = 6e3 + 7, M = 2111992;
int n, l, w[nxM], dp[nxM];

void solve() {
	cin >> n >> l;
	for(int i = 1; i <= n; i++) {
		cin >> w[i];
		w[i] += w[i - 1];
	}
	for(int i = 1; i <= n; i++) {
		dp[i] = INT_MAX;
		for(int j = i; j >= 0; j--) {
			if(w[i] - w[j] > l) break;
			dp[i] = min(dp[i], max(dp[j], l - w[i] + w[j]));
		}
	}
	cout << dp[n] << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
//	testcase();
	solve();
	return 0;
}
