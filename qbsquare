#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"

const int nxM = 1e3 + 7;
int n, m, a[nxM][nxM], w[nxM][nxM], h[nxM][nxM], dp[nxM][nxM];

void solve() {
	cin >> n >> m;
	int ans = 0;
	for(int i = 1; i <= n; i++) {
		for(int j = 1; j <= m; j++) {
			cin >> a[i][j];
			w[i][j] = a[i][j] == a[i][j - 1] ? w[i][j - 1] + 1 : 1;
			h[i][j] = a[i][j] == a[i - 1][j] ? h[i - 1][j] + 1 : 1;
			dp[i][j] = a[i][j] == a[i - 1][j - 1] ? min({w[i][j], h[i][j], dp[i - 1][j - 1] + 1}) : 1;
			ans = max(ans, dp[i][j]);
		}
	}
	cout << ans << "\n";
// 	bug();
// 	for(int i = 1; i <= n; i++) {
// 		for(int j = 1; j <= m; j++) {
// 			cout << dp[i][j] << " ";
// 		}
// 		cout << "\n";
// 	}
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
//	testcase();
	solve();
	return 0;
}
