#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;

#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"

const int nxM = 25e3 + 7, M = 14062008;
ll dp[nxM], n, a[nxM];

void solve() {
	cin >> n;
	for(int i = 1; i < n; i++) cin >> a[i];
	dp[1] = a[1];
	dp[2] = a[1] + a[2];
	for(int i = 3; i < n; i++) {
		dp[i] = min(dp[i - 1] + a[i], dp[i - 2] + a[i]);
	}
	cout << dp[n - 1] << "\n"; 
}

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
	solve();
	return 0;
}
