#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {int t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((int)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"

const int nxM = 1e4 + 7;
ar<int, 3> a[nxM];
int n;

void solve() {
	cin >> n;
	for(int i = 0; i < n; i++) {
		cin >> a[i][1] >> a[i][0];
		a[i][2] = a[i][0] - a[i][1];
	}
	sort(a, a + n);
	set<ar<int, 2>> dp;
	dp.insert({0, 0});
	int ldp = 0;
	for(int i = 0; i < n; i++) {
		auto it = dp.lower_bound({a[i][1] + 1});
		it--;
		ldp = max(ldp, (*it)[1] + a[i][2]);
		dp.insert({a[i][0], ldp});
//		cout << a[i][1] << " " << (*it)[0] << " " << ldp << "\n";
	}
	cout << ldp << "\n";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
//	testcase();
	solve();
	return 0;
}
